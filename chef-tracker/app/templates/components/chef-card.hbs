
<div class="w3-card-3 w3-border chef-card">
  <details>
    <summary class="w3-container w3-theme-l4">
      <span class="{{if chef.isCooking ' ' 'not-available'}}">{{chef.name}}</span>
      {{#if (can-edit-chef chef.restaurant.user.id)}}
        <div class='itemButtons'>
          <i {{action "destroyItem" chef}} class="fa fa-trash" aria-hidden="true">&nbsp;</i>
          {{#link-to 'chefs.chef.edit' chef.id class='fa fa-pencil-square-o'}}&nbsp;{{/link-to}}
          <i {{action "toggleAvailablity" chef}} class="fa fa-sign-{{if chef.isCooking 'out' 'in'}}" aria-hidden="true"></i>
        </div>
      {{/if}}
    </summary>
      <div class="w3-container">
        {{icon-image chef.imageUrl float="left"}}
        <div>{{chef.description}}</div>
        <div style="white-space: nowrap">Students:
          <button {{action "removeStudent" chef}}>-</button>
            {{chef.students}}
          <button {{action "addStudent" chef}}>+</button>
        </div>
        <div style="white-space: nowrap">Restaurant: {{chef.restaurant.name}}</div>
        <div style="white-space: nowrap">Health: {{chef.health}}</div>
        <div style="white-space: nowrap">Fame: {{chef.fame}}</div>
        <div style="clear: both;"> </div>
      </div>
  </details>
</div>
