<div class="w3-panel w3-card w3-theme-l2" style="margin-top:-.1em;">
  {{#if isAdding}}
    {{comment/edit-comment changeset=(changeset post) post=post toggleIsEditting=(action 'toggleAdding') addComment=(action 'addComment')  addingComment=true}}
  {{/if}}
  {{#if (lte post.comments.content.length 0) }}
    {{#if (not isAdding)}}
      No comments yet...  <a href="#" {{action "toggleAdding"}}>Be the first</a>!
    {{/if}}
  {{else}}
    <button {{action "toggleShowComments"}} class=" w3-round w3-gray w3-small" style="padding:3px; height:1.5em;">
      <div style='top:-5px; position:relative;'>{{showComments}}</div>
    </button>
    {{post.numPostComments}} comment{{#if (gt post.comments.content.length 1) }}s{{/if}}
    <div style='float:right'>
      <button {{action 'toggleAdding'}} class="w3-button w3-gray w3-round w3-padding-small"><i class="fa fa-commenting-o" aria-hidden="true"></i></button>
    </div>
    {{#if (eq showComments '-')}}
      {{#each post.comments as |comment|}}
        <div class="w3-panel w3-card w3-theme-l4">
          {{comment/expandable-comment comment=comment post=post type='comment' addComment=(action 'addComment')}}
        </div>
      {{/each}}
    {{/if}}
  {{/if}}

</div>
{{yield}}
