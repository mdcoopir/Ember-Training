<div class="w3-container w3-card-4">
  <div class="float-right">Open {{model.restaurant.yearsOpen}} years </div>
  <h2> {{model.restaurant.name}}</h2>
  {{#link-to 'restaurants.restaurant.edit' model.restaurant.id}}<button>Edit</button>{{/link-to}}

  <p>The follwoing foods are served here:</p>

  <ul>
    {{#each model.restaurant.foods as |food|}}
      <li>
        {{food.name}}
      </li>
    {{/each}}
  </ul>
  {{#if model.foods}}
    <p>Max Health Rating: {{model.restaurant.maxHealthRatings}}</p>
    <p>Average Health Rating: {{round model.restaurant.avgHealthRatings 3}}/10</p>
    {{rating-bar model.restaurant.avgHealthRatings 300 color='red'}}
  {{else}}
    <p>Please enter foods for this restaurant.</p>
  {{/if}}

</div>
